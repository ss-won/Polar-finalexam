<!--register body-->
    <section class="signup-content" style="margin-top:10px;">
        <div class="container">
           <div class="row">
           <!--logo-->
            <a href="/" style="text-decoration: none; color:black" class="col-md-12">
            <h3 id="logo">Polar'</h3>
            </a>
            <!--form (서버 연동시 수정)-->
            <form method="post" action="/register" class="col-md-12">
                <div class="input-group col-md-12">
                <input type="email" class="form-control" name="email" id="emailInputSignin" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required="true" oninvalid="this.setCustomValidity('유효한 이메일을 입력하세요')" oninput="setCustomValidity('')"/>
                </div>
                <div class="formbox input-group col-md-12">
                <input type="password" class="form-control col-md-12" name="password" placeholder="Password" title="숫자와 영문자를 이용하여 8자리 이상으로 입력해주세요" pattern="(?=.*[0-9])(?=.*[A-Za-z]).{8,}" required="true"/>
                </div>
                <div class="formbox input-group col-md-12">
                <input type="text" class="form-control col-md-12" name="name" placeholder="Name"  required="true"/>
                </div>
                 <!--register button-->
                <button class="btn sign-in" type="submit" name="submit"> <i class="fa fa-arrow-right" aria-hidden="true"></i><span class="btn-name">Register</span></button>
            </form>
            </div>
            <div class="row">
              <div class="col-md-12">
                <ul class="another">
                    <li style="font-size:0.5em">
                        이미 회원이신가요?
                    </li>
                    <li><a href="/signin" class="another" style="font-size:0.5em;" >로그인하기</a></li>
                </ul>
              </div>
            </div>
           {{#if error}}
            <div class="row">
              <div class="alert alert-danger col-md-12" style="font-size:0.7em"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>{{error}}</div>
            </div>
           {{/if}}
        </div><!--end container-->
        
       
    </section>

  
    
    
