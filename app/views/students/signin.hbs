    <header class="masterhead">
        
    </header>
<section class="signup-content" style="margin-top:10px;">
        <div class="container">
           <div class="row">
          <!--logo-->
        <a href="/" style="text-decoration: none; color:black;" class="col-md-12">
           <h3 id="logo">Polar'</h3>
           </a>
            </div>
            <div class="row">
            <!--form (서버 연동시 수정)-->
            <form method='post' action="/signin" style="" class="col-md-12">
                <div class="formbox form-group input-group col-md-12">
                <input type="email" class="form-control col-md-12"name="email" id="email" placeholder="Email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" required="" oninvalid="this.setCustomValidity('유효한 이메일을 입력하세요')" oninput="setCustomValidity('')"/>
                </div>
                <div class="formbox form-group input-group col-md-12">
                <input type="password" class="form-control col-md-12" name="password" id="password" placeholder="Password" title="숫자와 영문자를 이용하여 8자리 이상으로 입력해주세요" pattern="(?=.*[0-9])(?=.*[A-Za-z]).{8,}" required=""/>
               </div>
              <!--signin button-->
              <button class="btn sign-in" type="submit" name="submit">
              <i class="fa fa-arrow-right" aria-hidden="true"></i><span class="btn-name">Sign in</span></button>
            
              </form>
            </div>
             <div class="row">
              <div class="col-md-12">
                <ul class="another">
                    <li style="font-size:0.5em">
                        아직 회원이 아니신가요?
                    </li>
                    <li><a href="/register" class="another" style="font-size:0.5em;" >회원가입하기</a></li>
                </ul>
              </div>
            </div>
            {{#if error}}
            <div class="row">
              <div class="alert alert-danger col-md-12" style="font-size:0.7em"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>{{error}}</div>
            </div>
           {{/if}}
            <div class="col-md-12">
            <hr style="border: 2px solid black;width:25%;margin-bottom: 3px">
            <h6>간편로그인</h6>
            <a href='/auth/google' class="btn btn-social btn-google"><i class="fa fa-google-plus fa-lg" aria-hidden="true"></i>Google</a>
            <a href='/auth/facebook' class="btn btn-social btn-facebook"><i class="fa fa-facebook-square" aria-hidden="true"></i>Facebook</a>
            </div>
      
        </div><!--end container-->
        
       
    </section>

